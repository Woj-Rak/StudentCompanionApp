<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wojtek.studentcompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.QuotesActivity"
            android:label="@string/title_activity_quotes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.NotesActivity"
            android:label="@string/title_activity_new_note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>